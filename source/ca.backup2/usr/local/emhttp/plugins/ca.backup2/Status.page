Title="Backup / Restore Status"
---

<script>
var URL = "/plugins/ca.backup2/include/backupExec.php";

$(function() {
  setInterval(function() {
    checkBackup();
  }, 1000);
});

function checkBackup() {
  $.post(URL,{action:'checkBackup'},function(data) {
    if (data) {
      $("#backupLines").html(data);
    }
  });
}
</script>

