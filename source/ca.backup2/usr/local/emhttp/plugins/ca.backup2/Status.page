<script>
var caURL = "/plugins/ca.backup2/include/backupExec.php";

$(function() {
  setInterval(function() {
    checkBackup();
  }, 1000);
});

function checkBackup() {
  $.post(caURL,{action:'checkBackup'},function(data) {
    if (data) {
      $("#backupLines").html(data);
    }
  });
}
</script>

